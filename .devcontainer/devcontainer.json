{
	"name": "Flutter Development",
	"build": {
		"context": ".",
		"dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"Dart-Code.dart-code",
				"Dart-Code.flutter"
			],
			"settings": {
				"dart.flutterSdkPath": "/opt/flutter"
			}
		}
	},
	"postCreateCommand": "flutter pub get && flutter doctor"
}
